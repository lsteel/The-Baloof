$black = #000
$white = $fff
$red = #DC002A
$blue = #428BCA

*
  position absolute

.position-abs
  position absolute
  &.top
    top 0
  &.bottom
    bottom 0
  &.right
    right 0
  &.left
    left 0

.btn
  &.btn-square
    border-radius 0
  &.btn-rounded
    border-radius 4
  &.btn-hollow
    background transparent
    border 3px solid $black
    color $black
    &:hover
      background $black
      color $white
      transition all 5s ease
    &.btn-red
      border-color $red
      color $red
      &:hover
        background $red
        color $white
        transition all 5s ease
    &.btn-blue
      border-color $blue
      color $blue
      &:hover
        background $blue
        color $white
        transition all 5s ease

.fl-page-header
  padding-bottom: 20px;
